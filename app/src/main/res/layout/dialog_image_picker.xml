<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_image_picker_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/image_select"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dialog_image_picker_count"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_oval_accent_22dp"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dialog_image_picker_complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:paddingLeft="26dp"
            android:paddingRight="10dp"
            android:paddingStart="26dp"
            android:text="@string/common_ok"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_shadow"
        android:layout_below="@id/rl_image_picker_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dialog_image_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_image_picker_header"
        android:clipToPadding="false"
        android:padding="1.25dp" />

</RelativeLayout>

